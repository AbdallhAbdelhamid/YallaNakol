@model Dish
@{ string c = Model.Category.Name;}

<style>
    .span2 {
        width: 175px;
        float: left;
        display: block;
        line-height: 20px;
    }

    .span2 img {
        width: 175px;
        height:125px;
        vertical-align: middle;
        margin-right: 5px;
    }
</style>
<hr class="soften">
<div class="row-fluid @Model.Category.Name">

<div class="span2">
    <img src="@Model.ImageUrl" alt="">
</div>
<div class="span6">
    <h5>@Model.Name</h5>
    <p>
        @Model.Description
    </p>
</div>
<div class="span4 alignR">
    <form class="form-horizontal qtyFrm">
        <h3> @Model.Price L.E.</h3>
        <div class="btn-group">
            <span class="icon-shopping-cart">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <a asp-action="Details" asp-controller="Dishes" asp-route-id="@Model.Id" class="shopBtn">Add to cart</a>
            </span>
            
            @*<br />*@
            @*<a asp-action="Details" asp-controller="Dishes" asp-route-id="@Model.Id" class="shopBtn">View Dish</a>*@
        </div>
    </form>
</div>
</div>


