        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restaurant.DeliveryAreas)
        </dd>
    </dl>
</div>

@section Nagdy
{
<script>
    $('#restaurant-menu .section-title').css('background-image','url(' +'@Model.Restaurant.ImageUrl' +')');
</script>
}


@section filter {
    <div class="row">
        <div class="categories">
            <ul class="cat">
                <li>
                    <ol class="type">
                        <li><a href="#" data-filter="*" class="active">All</a></li>
                        @foreach (var item in Model.Category)
                        {
                            <li><a href="#" data-filter=".@item.Name">@item.Name</a></li>

                        }
                    </ol>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
}

<div class="row">
    <div class="portfolio-items">
        @foreach (var item in Model.Dishes)
        {
            <partial name="PartialViews/_RestaurantDish" model="item" />
        }
    </div>
</div>
