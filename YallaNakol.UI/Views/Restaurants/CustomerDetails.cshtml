@model RestaurantMenu

<h1>@Model.Restaurant.Name</h1>

@section Nagdy
    {
    <script>
        $('#restaurant-menu .section-title').css('background-image','url(' +'@Model.Restaurant.ImageUrl' +')');
    </script>
}
@section filter {
    <div class="row">
        <div class="categories">
            <ul class="cat">
                <li>
                    <ol class="type">
                        <li><a href="#" data-filter="*" class="active">All</a></li>
                        @foreach (var item in Model.Category)
                        {
                            <li><a href="#" data-filter=".@item.Name">@item.Name</a></li>

                        }
                    </ol>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
}

<div class="span9">
    <div class="well well-small">
        <div class="row-fluid">
            <div class="span2">
                <img src="@Model.Restaurant.ImageUrl" alt="">
            </div>
            <div class="span6">
                <h5>Product Name </h5>
                <p>
                    @Model.Restaurant.Description
                </p>
            </div>
            <div class="span4 alignR">
                <form class="form-horizontal qtyFrm">
                    <h3> Rating: @Model.Restaurant.Rate</h3>
                </form>
            </div>
        </div>

                @foreach (var item in Model.Dishes)
                {
                    <partial name="PartialViews/_RestaurantDish" model="item" />
                }


    </div>
</div>


