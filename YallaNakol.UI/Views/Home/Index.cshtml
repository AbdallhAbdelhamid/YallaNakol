@model HomeViewModel
@{int FlagCount = 0; }
@section header {
    <header id="header">
        <div class="intro">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="intro-text">
                            <h1>Yalla Nakol</h1>
                            <p>High Quality Restraunts </p>
                            <a href="#about" class="btn btn-custom btn-lg page-scroll">Discover Story</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="height:30px">

        </div>
    </header>
}
@section filter {
    <div class="row">
        <div class="categories">
            <ul class="cat">
                <li>
                    <ol class="type">
                        <li><a href="#" data-filter=".everyClass">All</a></li>
                        @foreach (var item in Model.Category)
                        {
                            <li><a href="#" data-filter=".@item.Name">@item.Name</a></li>
                        }
                    </ol>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
    </div>
}
<div class="row">
    <div class="portfolio-items">
        @foreach (var item in Model.Restaurants)
        {
            <partial name="PartialViews/_Restaurant" model="item" />
        }
    </div>
</div>



