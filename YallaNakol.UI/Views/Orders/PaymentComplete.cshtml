@model PaymentCompleteViewModel
@{
    ViewData["Title"] = "PaymentComplete";
}

<style>
    .backbtn{
        text-align:center;
    }

</style>
<div class="jumbotron">
    <h2 class="display-4">Payment Successful</h2>
    <p class="lead"> Your payment of <b>@Model.TotalOrderCost$</b> was succefully completed.</p>
    <hr class="my-4">
    <p><b>Tracking Number:</b> @Model.TrackingId</p>
    <p class="lead backbtn" >
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg" role="button">Back To Home</a>
    </p>
</div>